<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/dest_landing_fragment">

    <fragment
        android:id="@+id/dest_landing_fragment"
        android:name="com.disruption.moveery.ui.landing.movies.MoviesLandingFragment"
        android:label="@string/label_discover_frag"
        tools:layout="@layout/fragment_landing_movies">
        <action
            android:id="@+id/action_dest_landing_fragment_to_detailsFragment"
            app:destination="@id/dest_details_fragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_dest_landing_fragment_to_dest_search_fragment"
            app:destination="@id/dest_search_fragment" />
        <action
            android:id="@+id/action_dest_landing_fragment_to_dest_shows_landing_fragment"
            app:destination="@id/dest_shows_landing_fragment" />
    </fragment>

    <fragment
        android:id="@+id/dest_details_fragment"
        android:name="com.disruption.moveery.ui.details.movies.MovieDetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_movie_details">
        <argument
            android:name="movie"
            app:argType="com.disruption.moveery.models.movies.movie.Movie"
            app:nullable="true" />
        <argument
            android:name="altMovie"
            app:argType="com.disruption.moveery.models.movies.altmovie.AltMovie"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/dest_search_fragment"
        android:name="com.disruption.moveery.ui.search.movies.MovieSearchFragment"
        android:label="@string/label_search_frag"
        tools:layout="@layout/fragment_movie_search">
        <action
            android:id="@+id/action_dest_search_fragment_to_dest_details_fragment"
            app:destination="@id/dest_details_fragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/dest_shows_landing_fragment"
        android:name="com.disruption.moveery.ui.landing.shows.ShowsLandingFragment"
        android:label="Discover Shows"
        tools:layout="@layout/shows_landing_fragment">
        <action
            android:id="@+id/action_dest_shows_landing_fragment_to_dest_show_details_fragment"
            app:destination="@id/dest_show_details_fragment" />
        <action
            android:id="@+id/action_dest_shows_landing_fragment_to_dest_shows_search_fragment"
            app:destination="@id/dest_shows_search_fragment" />
    </fragment>

    <fragment
        android:id="@+id/dest_show_details_fragment"
        android:name="com.disruption.moveery.ui.details.shows.ShowDetailsFragment"
        android:label="Details"
        tools:layout="@layout/show_details_fragment" />

    <fragment
        android:id="@+id/dest_shows_search_fragment"
        android:name="com.disruption.moveery.ui.search.shows.ShowsSearchFragment"
        android:label="Search Shows"
        tools:layout="@layout/shows_search_fragment">
        <action
            android:id="@+id/action_dest_shows_search_fragment_to_dest_show_details_fragment"
            app:destination="@id/dest_show_details_fragment" />
    </fragment>
</navigation>